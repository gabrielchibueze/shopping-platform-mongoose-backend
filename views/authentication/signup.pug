extends ../layout/layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")


block content 
    div.sigup-page
        main.product-body
            if (error)
                div(class="login-message login-message-error") #{error}

            form.add-product-form(action="/signup" method="POST" novalidate)
                h3 Sign Up a new Account
                label(for="username" type="text") Enter your username
                input(type="text" value=`${oldInput? oldInput.username: ""}`  name="username" required id="username")
                label(for="email" type="text") Enter your email
                
                input(type="email" class=` add-product-entry ${invalidPath.find(err => err.path === "email") ? "red-border" : ""}` value=`${oldInput? oldInput.email: ""}`  name="email" required id="email")
                label(for="password") Enter your password
                input(type="password" class=` add-product-entry ${invalidPath.find(err => err.path === "password") ? "red-border" : ""}` value=`${oldInput? oldInput.password: ""}` required name="password" id="password")
                label(for="comfirmPassword") Comfirm your password
                input(type="password" class=` add-product-entry ${invalidPath.find(err => err.path === "comfirmPassword") ? "red-border" : ""}` value=`${oldInput? oldInput.comfirmPassword: ""}` required name="comfirmPassword" id="comfirmPassword")
                input(type="hidden", name="_csrf" value=`${csrfToken}`)
                button(class="add-product-btn") Signup